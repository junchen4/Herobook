<h1> <%=@user.email%>'s Profile Page </h1>

<% unless @user.id == current_user.id %>
  <form class="" action="<%=requests_url%>" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    <input type="hidden" name="requestee[id]" value="<%=@user.id%>">
    <button>Add Friend</button>
  </form>
<% end %>

<label>Friend Requests
  <% if current_user == @user%>
    <ul>
      <% current_user.pending_requests.each do |pending_request| %>
      <li>
        Pending Request from: <%= User.find(pending_request.requestor_id).email %>
        Status: <%= pending_request.status %>
        <%=button_to "Accept :)", request_url(pending_request), :method => :patch %>
        <br>
        <%=button_to "Reject :(", request_url(pending_request), :method => :delete %>
      </li>
      <br>
      <% end %>
    </ul>
  <% end %>
</label>

<ul>
  <% current_user.posts.each do |post| %>
    <li>
      <%= post.body %>
      <%= link_to "Edit", edit_post_url(post) %>
      <%= link_to "Remove", post_url(post), :method => :delete %>
    </li>
  <% end %>
</ul>
