<% if (FacebookApp.Models.currentUser.get('id') !== user.get('id')) { %>
  <% if(user.get('friendStatus') === 'pending') { %>
    Pending Friend Request
  <% } else if(user.get('friendStatus') === 'accepted' ) { %>
    <button class="remove-friend" data-id="<%=user.get('id')%>">Remove Friend</button>
  <% } else { %>
    <button class="request-friend">Add Friend</button>
  <% } %>
<% } %>
